@model WebApplication1.Models.PatientLogin
@{
    ViewBag.Title = "AppointmentBooked";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AppointmentBooked", "Appointment", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="main-div">
            <div style="width:70%;float:left">
                <div style="text-align:center;padding:20%">
                    @if (!string.IsNullOrEmpty(Model.RefrenceNo))
                    {
                        <span>
                            Your Appoinment has been booked.Your Reference Number is @(Model.RefrenceNo), please call us as at + 1(123) - 456 - 7890 for cancellation or any other query.
                            Please use your reference number as username and Phone as password for adding your case specific detail from Add Detail To Appoinment Form.
                        </span>
                    }
                    else
                    {
                        <span>
                            Thankyou for your valuable time. Your case is updated, please call us as at +1 (123) - 456 - 7890 for any other query.
                        </span>
                    }
                </div>
            </div>
            <div class="login-box">
                <div><img src="~/Images/openinghours.PNG" alt="image" /></div>
                <div class="blackBorder" style="padding:10%">
                    <div class="row">
                        <div class="col-md-3">
                            <img id="u128_img" class="img " src="~/Images/AddIcon.png">
                        </div>
                        <div class="col-md-9">
                            <div id="u129_text" class="text ">
                                <p><span style="text-decoration:underline;">Add Details To |Appoinment</span></p>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">

                        <div class="form-group">
                            <label class="col-md-3">UserName</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.RefrenceNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RefrenceNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3">Password</label>
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
}


<style>
    .main-div {
        width: 100%;
    }

    .login-box {
        width: 30%;
        float: left;
    }
</style>